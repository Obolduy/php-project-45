#!/usr/bin/env php
<?php

use function BrainGames\Cli\handle;
use function BrainGames\Games\BrainCalc\generateRound;
use function BrainGames\Games\BrainCalc\getGameDescription;

$autoloadPathComposerGlobal = __DIR__ . '/../../../autoload.php';
$autoloadPathLocal = __DIR__ . '/../vendor/autoload.php';

require_once file_exists($autoloadPathComposerGlobal) ? $autoloadPathComposerGlobal : $autoloadPathLocal;

$config = require_once __DIR__ . '/../src/config/config.php';

handle($config, generateRound(...), getGameDescription());
